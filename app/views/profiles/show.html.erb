<% @title = "#{@profile.nickname}: プロフィール編集" %>
<% content_for :breadcrumb do %>
  <% if @service.present? %><li><%= link_to @service.title, @service.root %></li><% end %>
<% end %>
<% content_for :head do -%>
  <%= javascript_include_tag "edit_profile" %>
<% end %>

<div class="column half">
  <%= render :layout => '/shared/column', :locals => {:id => 'edit-profile', :title => 'プロフィール編集'} do %>
    <% if @profile.errors.any? %>
      <div class="content">
        <h2>入力にエラーがあります</h2>
        <div>
          <ul>
          <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <%= form_for(@profile) do |f| %>
      <div class="content">
        <h2>プロフィール編集</h2>
        
        <div class="input-field">
          <label for="profile_nickname" style="width:6em">ニックネーム</label>
          <%= f.text_field :nickname %>
        </div>
        
        <div class="input-field">
          <label for="profile_profile_text" style="width:6em">自己紹介文</label>
          <%= f.text_area :profile_text %>
        </div>
      </div>
      <%= hidden_field_tag 'id', params[:service_id] %>
    <% end %>
    
    <div class="content">
      <h2>ログインに使用できるOpenID</h2>
      <div>
        <ul class="menu compact">
          <% @profile.openid_urls.each do |openid_url| %>
            <li class="notransition"><%= openid_url.str %></li>
          <% end %>
        </ul>
      </div>
    </div>
    
    <ul class="menu">
      <li><%= link_to '新しいOpenIDを追加する', profile_authenticate_path %></li>
      <% if @service.present? %>
        <li class="back"><%= link_to "#{@service.title}へ戻る", @service.back_from_profile %></li>
      <% end %>
    </ul>
  <% end %>
</div>

