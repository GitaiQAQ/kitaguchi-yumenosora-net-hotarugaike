<% @title = "#{@profile.nickname}: プロフィール編集" %>
<% content_for :breadcrumb do %>
  <% if @service.present? %><li><%= link_to @service.title, @service.root %></li><% end %>
<% end %>
<% content_for :head do -%>
  <%= javascript_include_tag "edit_profile" %>
<% end %>

<div class="column half">
  <%= render :layout => '/shared/column', :locals => {:id => 'edit-profile', :title => 'プロフィール編集'} do %>
    <% if @profile.errors.any? %>
      <div class="content">
        <h2>入力にエラーがあります</h2>
        <div>
          <ul>
          <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <%= form_for(@profile) do |f| %>
      <div class="content">
        <h2>プロフィール編集</h2>
        
        <div class="input-field">
          <label for="profile_nickname" style="width:6em">ニックネーム</label>
          <%= f.text_field :nickname %>
        </div>
        
        <div class="input-field">
          <label for="profile_profile_text" style="width:6em">自己紹介文</label>
          <%= f.text_area :profile_text %>
        </div>
      </div>
      <%= hidden_field_tag 'id', params[:service_id] %>
    <% end %>
    
    <div class="content">
      <h2>ログインに使用できるOpenID</h2>
      <div>
        <ul class="menu compact">
          <% @profile.openid_urls.each do |openid_url| %>
            <li data-destination="#openid-url-<%= openid_url.id %>"><%= openid_url.str %></li>
          <% end %>
        </ul>
      </div>
    </div>
    
    <ul class="menu">
      <li><%= link_to '新しいOpenIDを追加する', profile_authenticate_path(:mode => 'id_append') %></li>
      <% if @service.present? %>
        <li class="back desktop-only"><%= link_to "#{@service.title}へ戻る", "#{@service.back_from_profile}?kitaguchi_profile_id=#{@login_profile.id}" %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="column half">
  <% @profile.openid_urls.each do |openid_url| %>
    <%= render :layout => '/shared/column', :locals => {:id => "openid-url-#{openid_url.id}", :title => 'OpenID'} do %>
      <div class="content">
        <h2>OpenID</h2>
        <p>
          <%= openid_url.str %>
        </p>
        
        <% if openid_url.primary_openid %>
          <p>
            これは主OpenIDです。プロフィールから削除できません。
          </p>
        <% end %>
      </div>
      
      <% unless openid_url.primary_openid %>
        <ul class="menu">
          <li class="delete-openid notransition" data-id="<%= openid_url.id %>">このOpenIDを削除する</li>
        </ul>
        <%= form_for openid_url, :html => {:id => "delete_openid_url_#{openid_url.id}"} do %>
          <%= hidden_field_tag '_method', 'delete' %> 
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

